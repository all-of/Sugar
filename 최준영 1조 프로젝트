// ============================================================
// ê¸°ëŠ¥ 4: D-Day ê³„ì‚°ê¸°
// ============================================================

void runDdayCalculator(Date today)
{
    int choice;
    Date target;
    int days;

    clearScreen();
    printDoubleLine();
    printf("\n       [ D-Day ê³„ì‚°ê¸° ]\n\n");
    printDoubleLine();

    printf("\n  ì˜¤ëŠ˜ ë‚ ì§œ: %dë…„ %dì›” %dì¼\n", today.year, today.month, today.day);

    printf("\n");
    printLine();
    printf("\n    [1] ê¸°ë§ê³ ì‚¬ê¹Œì§€ (2025.12.16)\n");
    printf("    [2] í¬ë¦¬ìŠ¤ë§ˆìŠ¤ê¹Œì§€ (2025.12.25)\n");
    printf("    [3] ìƒˆí•´ê¹Œì§€ (2026.1.1)\n");
    printf("    [4] ì§ì ‘ ë‚ ì§œ ì…ë ¥\n");
    printf("\n");
    printLine();

    printf("\n  ì„ íƒí•˜ì„¸ìš” (1-4): ");
    scanf_s("%d", &choice);

    switch (choice) {
    case 1:
        target.year = 2025; target.month = 12; target.day = 16;
        days = calculateDaysBetween(today, target);
        printf("\n  ê¸°ë§ê³ ì‚¬ê¹Œì§€ D-%d ì…ë‹ˆë‹¤!\n", days);
        if (days <= 7) {
            printf("  ë²¼ë½ì¹˜ê¸° ê°...? í™”ì´íŒ…!\n");
        }
        else if (days <= 14) {
            printf("  ì•„ì§ ì‹œê°„ ìˆì–´ìš”! ê³„íšì ìœ¼ë¡œ ê³µë¶€í•˜ì„¸ìš”!\n");
        }
        else {
            printf("  ì—¬ìœ ìˆë„¤ìš”! ë¯¸ë¦¬ë¯¸ë¦¬ ì¤€ë¹„í•˜ë©´ A+ ê°€ëŠ¥!\n");
        }
        break;
    case 2:
        target.year = 2025; target.month = 12; target.day = 25;
        days = calculateDaysBetween(today, target);
        printf("\n  í¬ë¦¬ìŠ¤ë§ˆìŠ¤ê¹Œì§€ D-%d ì…ë‹ˆë‹¤!\n", days);
        printf("  ë©”ë¦¬ í¬ë¦¬ìŠ¤ë§ˆìŠ¤! ğŸ„\n");
        break;
    case 3:
        target.year = 2026; target.month = 1; target.day = 1;
        days = calculateDaysBetween(today, target);
        printf("\n  2026ë…„ ìƒˆí•´ê¹Œì§€ D-%d ì…ë‹ˆë‹¤!\n", days);
        printf("  ìƒˆí•´ ëª©í‘œëŠ” ì„¸ìš°ì…¨ë‚˜ìš”?\n");
        break;
    case 4:
        printf("\n  ëª©í‘œ ë‚ ì§œë¥¼ ì…ë ¥í•˜ì„¸ìš” (ì˜ˆ: 2026 3 1): ");
        scanf_s("%d %d %d", &target.year, &target.month, &target.day);
        days = calculateDaysBetween(today, target);
        if (days >= 0) {
            printf("\n  %dë…„ %dì›” %dì¼ê¹Œì§€ D-%d ì…ë‹ˆë‹¤!\n",
                target.year, target.month, target.day, days);
        }
        else {
            printf("\n  ê·¸ ë‚ ì§œëŠ” %dì¼ ì „ì— ì§€ë‚˜ê°”ìŠµë‹ˆë‹¤!\n", -days);
        }
        break;
    default:
        printf("\n  [ì˜¤ë¥˜] 1~4 ì‚¬ì´ì˜ ìˆ«ìë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.\n");
    }

    printf("\n  ê³„ì†í•˜ë ¤ë©´ Enterë¥¼ ëˆ„ë¥´ì„¸ìš”...");
    getchar(); getchar();
}

// ============================================================
// ë  ê³„ì‚° í•¨ìˆ˜
// ============================================================

void getZodiac(int year, char* zodiac, char* trait)
{
    int index = year % 12;
    strcpy_s(zodiac, 20, zodiacAnimals[index]);
    strcpy_s(trait, 50, zodiacTraits[index]);
}

// ============================================================
// ë³„ìë¦¬ ê³„ì‚° í•¨ìˆ˜
// ============================================================

void getConstellation(int month, int day, char* name, char* trait)
{
    int i;

    for (i = 0; i < 12; i++) {
        // ì—°ë§ ë³„ìë¦¬ (ì—¼ì†Œìë¦¬) ì²˜ë¦¬
        if (constellations[i].startMonth > constellations[i].endMonth) {
            if ((month == constellations[i].startMonth && day >= constellations[i].startDay) ||
                (month == constellations[i].endMonth && day <= constellations[i].endDay)) {
                strcpy_s(name, 20, constellations[i].name);
                strcpy_s(trait, 100, constellations[i].trait);
                return;
            }
        }
        else {
            if ((month == constellations[i].startMonth && day >= constellations[i].startDay) ||
                (month == constellations[i].endMonth && day <= constellations[i].endDay) ||
                (month > constellations[i].startMonth && month < constellations[i].endMonth)) {
                strcpy_s(name, 20, constellations[i].name);
                strcpy_s(trait, 100, constellations[i].trait);
                return;
            }
        }
    }

    // ê¸°ë³¸ê°’
    strcpy_s(name, 20, "ì•Œ ìˆ˜ ì—†ìŒ");
    strcpy_s(trait, 100, "ì‹ ë¹„ë¡œìš´");
}

// ============================================================
// íƒ„ìƒì„ ë°˜í™˜ í•¨ìˆ˜
// ============================================================

char* getBirthstone(int month)
{
    if (month >= 1 && month <= 12) {
        return birthstones[month - 1];
    }
    return "ì•Œ ìˆ˜ ì—†ìŒ";
}

// ============================================================
// ì›ê´‘ëŒ€ ì—­ì‚¬ ì°¾ê¸°
// ============================================================

void findWkuHistory(int year)
{
    int i;
    int found = 0;
    int closestYear = 1946;
    int closestIndex = 0;

    for (i = 0; i < wku_history_count; i++) {
        if (wku_history[i].year == year) {
            printf("    >> %s\n", wku_history[i].event);
            found = 1;
        }
    }

    if (!found) {
        for (i = 0; i < wku_history_count; i++) {
            if (wku_history[i].year <= year && wku_history[i].year > closestYear) {
                closestYear = wku_history[i].year;
                closestIndex = i;
            }
        }
        printf("    (í•´ë‹¹ ì—°ë„ì˜ íŠ¹ë³„í•œ ê¸°ë¡ì€ ì—†ì§€ë§Œ...)\n");
        printf("    >> ê°€ì¥ ê°€ê¹Œìš´ ì—­ì‚¬ (%dë…„): %s\n",
            wku_history[closestIndex].year, wku_history[closestIndex].event);
    }
}

// ============================================================
// ì„¸ê³„ ì—­ì‚¬ ì°¾ê¸°
// ============================================================

void findWorldHistory(int year)
{
    int i;
    int found = 0;
    int closestYear = 1990;
    int closestIndex = 0;

    for (i = 0; i < world_history_count; i++) {
        if (world_history[i].year == year) {
            printf("    >> %s\n", world_history[i].event);
            found = 1;
        }
    }

    if (!found) {
        if (year < 1990) {
            printf("    (1990ë…„ ì´ì „ ë°ì´í„°ëŠ” ì¤€ë¹„ ì¤‘ì…ë‹ˆë‹¤)\n");
        }
        else {
            for (i = 0; i < world_history_count; i++) {
                if (world_history[i].year <= year && world_history[i].year > closestYear) {
                    closestYear = world_history[i].year;
                    closestIndex = i;
                }
            }
            printf("    (í•´ë‹¹ ì—°ë„ì˜ ê¸°ë¡ì€ ì—†ì§€ë§Œ...)\n");
            printf("    >> ê°€ì¥ ê°€ê¹Œìš´ ì—­ì‚¬ (%dë…„): %s\n",
                world_history[closestIndex].year, world_history[closestIndex].event);
        }
    }
}

// ============================================================
// ìš”ì¼ ê³„ì‚° í•¨ìˆ˜ (ì ¤ëŸ¬ ê³µì‹)
// ============================================================

int calculateDayOfWeek(int year, int month, int day)
{
    int k, j, h;

    if (month < 3) {
        month += 12;
        year -= 1;
    }

    k = year % 100;
    j = year / 100;

    h = (day + (13 * (month + 1)) / 5 + k + k / 4 + j / 4 - 2 * j) % 7;
    h = ((h + 6) % 7);

    return h;
}

// ============================================================
// ìœ¤ë…„ íŒë³„ í•¨ìˆ˜
// ============================================================

int isLeapYear(int year)
{
    return ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0));
}

// ============================================================
// í•´ë‹¹ ì›”ì˜ ì¼ìˆ˜ ë°˜í™˜
// ============================================================

int getDaysInMonth(int year, int month)
{
    int daysInMonth[] = { 31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31 };

    if (month == 2 && isLeapYear(year)) {
        return 29;
    }
    return daysInMonth[month - 1];
}

// ============================================================
// ê¸°ì¤€ì¼ë¡œë¶€í„° ì¼ìˆ˜ ê³„ì‚°
// ============================================================

int calculateDaysFromBase(int year, int month, int day)
{
    int totalDays = 0;
    int i;

    for (i = 1; i < year; i++) {
        totalDays += isLeapYear(i) ? 366 : 365;
    }

    for (i = 1; i < month; i++) {
        totalDays += getDaysInMonth(year, i);
    }

    totalDays += day;
    return totalDays;
}

// ============================================================
// ë‘ ë‚ ì§œ ì‚¬ì´ì˜ ì¼ìˆ˜ ê³„ì‚°
// ============================================================

int calculateDaysBetween(Date date1, Date date2)
{
    int days1 = calculateDaysFromBase(date1.year, date1.month, date1.day);
    int days2 = calculateDaysFromBase(date2.year, date2.month, date2.day);
    return days2 - days1;
}

// ============================================================
// ì¶œë ¥ í•¨ìˆ˜ë“¤
// ============================================================

void clearScreen(void)
{
    system("cls");
}

void printHeader(void)
{
    printf("\n");
    printDoubleLine();
    printf("\n");
    printf("        ***  ë‚˜ì˜ ìƒì¼, ê·¸ë‚ ì˜ ì›ê´‘  ***\n");
    printf("         My Birthday at Wonkwang - Last Lecture Edition\n");
    printf("\n");
    printf("        W   W  K   K  U   U\n");
    printf("        W   W  K  K   U   U\n");
    printf("        W W W  KKK    U   U\n");
    printf("        WW WW  K  K   U   U\n");
    printf("        W   W  K   K   UUU\n");
    printf("\n");
    printf("        ì›ê´‘ëŒ€í•™êµ ì°½ì˜ê³µê³¼ëŒ€í•™ ì»´í“¨í„°ì†Œí”„íŠ¸ì›¨ì–´ê³µí•™ê³¼\n");
    printf("        ê³ ê¸‰í”„ë¡œê·¸ë˜ë°ì–¸ì–´\n");
    printf("        ë‹´ë‹¹êµìˆ˜: ì´ì™„ë²” êµìˆ˜ë‹˜\n");
    printf("\n");
    printf("        1ì¡°: ìµœì¤€ì˜(ì¡°ì¥, ì´ì±…ì„), ì˜¤ì€ì¢…, ì˜¤í˜„ë¹ˆ, ì´í•˜ì—°\n");
    printf("\n");
    printDoubleLine();
}

