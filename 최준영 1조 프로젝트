void main()
{
    int choice;
    int running = 1;
    Date today;

    // í•œê¸€ ì¶œë ¥ ì„¤ì • (Windows ì½˜ì†”)
    SetConsoleOutputCP(949);  // í•œê¸€ ì½”ë“œ í˜ì´ì§€
    SetConsoleCP(949);

    // í˜„ì¬ ë‚ ì§œ ê°€ì ¸ì˜¤ê¸° (time.h í™œìš©)
    today = getTodayDate();

    // í”„ë¡œê·¸ë¨ ì‹œì‘
    while (running) {
        clearScreen();
        printHeader();
        printMenu();

        printf("\n  ë©”ë‰´ë¥¼ ì„ íƒí•˜ì„¸ìš” (1-5): ");
        scanf_s("%d", &choice);

        switch (choice) {
        case 1:
            // ìƒì¼ ë¶„ì„
            runBirthdayAnalysis(today);
            break;
        case 2:
            // ì›ê´‘ëŒ€ ì—­ì‚¬ ì „ì²´ ë³´ê¸°
            runWkuHistoryViewer();
            break;
        case 3:
            // íŠ¹ì • ì—°ë„ ê²€ìƒ‰
            runYearSearch();
            break;
        case 4:
            // D-Day ê³„ì‚°ê¸°
            runDdayCalculator(today);
            break;
        case 5:
            // ì¢…ë£Œ
            running = 0;
            printf("\n  í”„ë¡œê·¸ë¨ì„ ì¢…ë£Œí•©ë‹ˆë‹¤. ê°ì‚¬í•©ë‹ˆë‹¤!\n");
            printf("  ì›ê´‘ëŒ€í•™êµ ì»´í“¨í„°ì†Œí”„íŠ¸ì›¨ì–´ê³µí•™ê³¼ 1ì¡° ë“œë¦¼\n\n");
            break;
        default:
            printf("\n  [ì˜¤ë¥˜] 1~5 ì‚¬ì´ì˜ ìˆ«ìë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.\n");
            printf("  ê³„ì†í•˜ë ¤ë©´ Enterë¥¼ ëˆ„ë¥´ì„¸ìš”...");
            getchar(); getchar();
        }
    }
}

// ============================================================
// í˜„ì¬ ë‚ ì§œ ê°€ì ¸ì˜¤ê¸° (time.h í™œìš©)
// ============================================================

Date getTodayDate(void)
{
    Date today;
    time_t t = time(NULL);
    struct tm tm;
    localtime_s(&tm, &t);

    today.year = tm.tm_year + 1900;
    today.month = tm.tm_mon + 1;
    today.day = tm.tm_mday;

    return today;
}

